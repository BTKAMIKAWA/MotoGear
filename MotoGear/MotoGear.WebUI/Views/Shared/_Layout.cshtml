<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="~/Content/css/StyleSheet1.css">

</head>
<body>
    <div class="navbar navbar-fixed-top">
        <div class="container header" id="header">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <img style="padding-top: 7px"class="shifter" src="~/Content/images/redsprocket.jpg" />
                <h2 style="display: inline-block; color: red">MotoGear</h2>

            </div>
            <div class="navbar-collapse collapse">
                <ul style="padding-top: 15px"class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Admin", "Index", "Admin")</li>
                </ul>
                @Html.Partial("_LoginPartial")
                @{ 
                    Html.RenderAction("ShoppingCartSummary", "ShoppingCart");
                }
            </div>
        </div>
    </div>

    <div class="container">
    <br /><br />
        @RenderBody()
    </div><br /><br />
    <footer>
    <p>@DateTime.Now.Year - MotoGear.com</p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>

</html>
